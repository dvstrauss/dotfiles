# vim
alias v="nvim"
alias vim="nvim"
alias e="nvim"
alias :e="nvim"
alias q="exit"
alias :q="exit"
alias vimrc="nvim ~/.config/nvim/init.lua"

# pbcopy
alias pbcopy="xclip -selection clipboard"
alias pbpaste="xclip -selection clipboard -o"

# git
alias gca="git commit --amend"
alias gcan="git commit --amend --no-edit"
alias gs="git status"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gpl="git pull"
alias gps="git push"
alias gcm="git checkout master"
alias gcmm="git checkout main"

# apoex
alias kc="kubeconsole"
alias kcp="kubeconsole production"
alias kcs="kubeconsole sandbox"

alias publickey="cat ~/.ssh/id_rsa.pub | pbcopy"

# rails
alias rc="rails c"
alias rs="rails s"
alias wp="bin/webpack-dev-server --hot"

# system
alias update="sudo pacman -Syu && flatpak update"
alias cat="bat"
alias diff="diff-so-fancy"
alias ls="ls -la"
alias x="exit"

# zshrc
alias zshrc="nvim ~/.zshrc"
alias sourcez="source ~/.zshrc"
alias aliases="nvim ~/.dotfiles/zsh/.zsh/aliases"

